@model GiftelleCMSbackend.Models.OrderItem

@{
    ViewData["Title"] = "Order Item Details";
}

<h1>Order Item Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order</dt>
        <dd class="col-sm-10">@Model.Order?.CustomerName</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderItemId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>