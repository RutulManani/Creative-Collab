@model GiftelleCMSbackend.Models.OrderItem

@{
    ViewData["Title"] = "Delete Order Item";
}

<h1>Delete Order Item</h1>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order</dt>
        <dd class="col-sm-10">@Model.Order?.CustomerName</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="OrderItemId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>