@model EduFitMart.Models.Fitness.Workout

@{
    ViewData["Title"] = "Delete Workout";
}

<h1>Delete Workout</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this workout?</h3>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
            <dt class="col-sm-2">Duration</dt>
            <dd class="col-sm-10">@Model.Duration minutes</dd>
            <dt class="col-sm-2">Calories</dt>
            <dd class="col-sm-10">@Model.CaloriesEstimated</dd>
            <dt class="col-sm-2">Exercises</dt>
            <dd class="col-sm-10">@Model.WorkoutExercises.Count</dd>
            <dt class="col-sm-2">Students</dt>
            <dd class="col-sm-10">@Model.StudentWorkouts.Count</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="WorkoutId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>