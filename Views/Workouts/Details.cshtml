@model EduFitMart.Models.Fitness.Workout

@{
    ViewData["Title"] = "Workout Details";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h1>@Model.Name</h1>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Duration)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Duration) minutes</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CaloriesEstimated)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CaloriesEstimated) calories</dd>
        </dl>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5>Exercises</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.WorkoutExercises.Any())
                        {
                            <ul class="list-group">
                                @foreach (var exercise in Model.WorkoutExercises)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @exercise.Exercise.Name
                                        <span class="badge bg-primary rounded-pill">@exercise.Exercise.MuscleGroup</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No exercises added</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Assigned Students</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.StudentWorkouts.Any())
                        {
                            <ul class="list-group">
                                @foreach (var student in Model.StudentWorkouts)
                                {
                                    <li class="list-group-item">
                                        <a asp-controller="Students" asp-action="Details" asp-route-id="@student.StudentId">
                                            @student.Student.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No students assigned</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.WorkoutId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>