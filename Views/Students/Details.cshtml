@model EduFitMart.Models.School.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h1>@Model.Name</h1>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        </dl>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5>Courses</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Enrollments.Any())
                        {
                            <ul class="list-group">
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    <li class="list-group-item">@enrollment.Course.Title</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No courses enrolled</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Workouts</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.StudentWorkouts.Any())
                        {
                            <ul class="list-group">
                                @foreach (var workout in Model.StudentWorkouts)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @workout.Workout.Name
                                        <form asp-controller="StudentWorkouts" asp-action="Delete" method="post">
                                            <input type="hidden" name="studentId" value="@Model.StudentId" />
                                            <input type="hidden" name="workoutId" value="@workout.WorkoutId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No workouts assigned</p>
                        }
                        <div class="mt-2">
                            <a asp-controller="StudentWorkouts" asp-action="Create" asp-route-studentId="@Model.StudentId"
                               class="btn btn-sm btn-success">Add Workout</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5>Orders</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Orders.Any())
                        {
                            <ul class="list-group">
                                @foreach (var order in Model.Orders)
                                {
                                    <li class="list-group-item">
                                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId">
                                            Order #@order.OrderId - @order.OrderDate.ToShortDateString()
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No orders placed</p>
                        }
                        <div class="mt-2">
                            <a asp-controller="Orders" asp-action="Create" asp-route-studentId="@Model.StudentId"
                               class="btn btn-sm btn-info">New Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>