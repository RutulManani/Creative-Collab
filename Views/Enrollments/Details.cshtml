@model EduFitMart.Models.School.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Enrollment Details</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student?.Name</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course?.CourseName</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.EnrollmentId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>