@model EduFitMart.Models.School.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Enrollment</h1>
<h3>Are you sure you want to delete this?</h3>

<hr />
<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student?.Name</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course?.CourseName</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="EnrollmentId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</form>