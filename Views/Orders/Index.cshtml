@model IEnumerable<GiftelleCMSbackend.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="mb-4">Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Order Items (Product & Quantity)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <ul class="mb-0 ps-3">
                        @foreach (var item in order.OrderItems)
                        {
                            <li><strong>@item.Product?.Name</strong> — Quantity: @item.Quantity</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
