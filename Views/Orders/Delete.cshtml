@model EduFitMart.Models.ECommerce.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this order?</h3>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Order #@Model.OrderId</h4>
        <dl class="row">
            <dt class="col-sm-2">Order Date</dt>
            <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Customer</dt>
            <dd class="col-sm-10">@Model.CustomerName</dd>
            <dt class="col-sm-2">Student</dt>
            <dd class="col-sm-10">
                @if (Model.Student != null)
                {
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId">
                        @Model.Student.Name
                    </a>
                }
                else
                {
                    <span>N/A</span>
                }
            </dd>
            <dt class="col-sm-2">Items</dt>
            <dd class="col-sm-10">@Model.OrderItems.Count</dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">@Model.OrderItems.Sum(oi => oi.Product.Price * oi.Quantity).ToString("C")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>