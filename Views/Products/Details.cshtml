@model EduFitMart.Models.ECommerce.Product
@{
    ViewData["Title"] = "Product Details";
}
<h1>Product Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Vendor</dt>
    <dd class="col-sm-10">@Model.Vendor?.Name</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
<a asp-action="Index">Back to List</a>